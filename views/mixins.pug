mixin contactIcon(iconName, link)
	.col-lg-2.col-md-2.col-sm-4.col-xs-6
		.service-box
			a(href=link, target="_blank")
				i.fa.fa-2x.wow.bounceIn(class=iconName, data-wow-delay='0s')

